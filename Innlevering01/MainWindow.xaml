<Window x:Class="Innlevering01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SupahDupahLevelEditor" Height="607" Width="800" Background="#FF2D2D30" BorderBrush="#FF252526">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#FF2D2D30" BorderBrush="#FF252526">
                <MenuItem Header="_FILE" Foreground="#FFF1F1D5" Background="#FF2D2D30" BorderBrush="#FF252526">
                    <MenuItem x:Name="fileOpen" Header="_Open" Background="#FF2D2D30" BorderBrush="#FF252526" />
                    <MenuItem x:Name="fileClose" Header="_Close" Background="#FF2D2D30" BorderBrush="#FF252526"/>
                    <MenuItem x:Name="fileSave" Header="_Save" Background="#FF2D2D30" BorderBrush="#FF252526" />
                    <MenuItem x:Name="fileExit" Header="_Exit" Background="#FF2D2D30" BorderBrush="#FF252526" Click="exit"/>
                </MenuItem>
            </Menu>
            <TextBox DockPanel.Dock="Bottom" BorderBrush="#FF252526" Background="#FF2D2D30" BorderThickness="0,0,0,0"></TextBox>
            <StackPanel DockPanel.Dock="Left" x:Name ="tileMainWrap" Width="160" Loaded="tileContainer_Loaded" Orientation="Vertical" Background="#FF252526" />
            <Grid x:Name="mainGrid" Background="#FF3A3A3A" Width="600" Loaded="mainGrid_Loaded" >
                <Grid Name="UniGrid" ShowGridLines="True" PreviewMouseDown="OnMouseMove"></Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
