<UserControl x:Class="Innlevering01.User_Controls.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LeftContainer" Background="#FF2D2D30">
        <Grid Height="Auto" Margin="0, 0, 0, 165">
            <Label Foreground="#EEEEEE" BorderThickness="0" Background="#FF252526" FontWeight="Bold">Available tiles</Label>
            <Line X1="0" X2="160" Stroke="#EEEEEEEE" StrokeThickness="3" Y1="21" Y2="21"></Line>
            <TreeView Name="TileMainWrap" Width="160" Height="Auto" Loaded="tileContainer_Loaded" Background="#FF252526" Foreground="#EEEEEEEE" Margin="0,20,0,163" BorderThickness="0" />
        </Grid>
        
        <Grid Background="#FF252526" Height="150" Margin="0, 20, 0, 0" VerticalAlignment="Bottom">
            <Label Foreground="#EEEEEE" BorderThickness="0" HorizontalContentAlignment="Center" >Selected tile</Label>
            <Label x:Name="SelectedTileGrid" Foreground="#EEEEEE" HorizontalContentAlignment="Center" BorderThickness="0" Width="100" Height="100" Margin="27,10,33,-3"></Label>
        </Grid>
    </Grid>
</UserControl>
