<UserControl x:Class="Innlevering01.User_Controls.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="LeftContainer" Background="#FF2D2D30" DockPanel.Dock="Left">
        <StackPanel x:Name ="TileMainWrap" Width="160" Loaded="tileContainer_Loaded" Orientation="Vertical" Background="#FF252526" Margin="0,0,0,163" />
        <Grid  Background="#FF252526" Margin="0,384,0,0">
                <Label Foreground="#FFF1F1D5" BorderThickness="0" HorizontalContentAlignment="Center" >Selected tile</Label>
                <Label x:Name="SelectedTileGrid" Foreground="#FFF1F1D5" HorizontalContentAlignment="Center" BorderThickness="0"  Margin="10,27,10,10"></Label>
        </Grid>

    </Grid>
</UserControl>
